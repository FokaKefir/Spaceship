<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.fragment.commander.SystemFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="@id/vizszintes1"
            app:layout_constraintBottom_toBottomOf="@id/vizszintes8"
            app:layout_constraintStart_toStartOf="@id/fuggoleges6"
            app:layout_constraintEnd_toEndOf="@id/fuggoleges11">

            <TextView
                android:id="@+id/txt_system_communication_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: active"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt_system_communication_delay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_system_communication_status"
                android:text="Delay: 10 min"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt_system_engine_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/txt_system_engine_temperature"
                android:text="Status: active"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_system_engine_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/txt_system_engine_thrust"
                android:text="Temperature: 120 C"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt_system_engine_thrust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/txt_system_engine_fuel"
                android:text="Thrust: 5000 J"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt_system_engine_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Fuel: 0 L"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt_system_health_oxygen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/txt_system_health_tension"
                android:layout_alignParentEnd="true"
                android:text="Health sys. oxygen: 50%"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_system_health_tension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_above="@id/txt_system_water_pressure"
                android:text="Health sys. tension: 50%"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt_system_water_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="Water pressure: 50%"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt_system_reactor_oxygen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Reactor oxygen: 50%"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt_system_reactor_tension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/txt_system_reactor_oxygen"
                android:text="Reactor tension: 50%"
                android:textSize="16sp"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/vizszintes2"
            app:layout_constraintEnd_toStartOf="@id/fuggoleges6"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/fuggoleges5"
            app:layout_constraintTop_toTopOf="@id/vizszintes1"
            app:layout_constraintVertical_bias="0.0"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/vizszintes2"
            app:layout_constraintEnd_toStartOf="@id/fuggoleges6"
            app:layout_constraintStart_toStartOf="@id/fuggoleges5"
            app:layout_constraintTop_toTopOf="@id/vizszintes1"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/vizszintes2"
            app:layout_constraintEnd_toStartOf="@id/fuggoleges6"
            app:layout_constraintStart_toStartOf="@id/fuggoleges5"
            app:layout_constraintTop_toTopOf="@id/vizszintes1"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/vizszintes3"
            app:layout_constraintEnd_toStartOf="@id/fuggoleges12"
            app:layout_constraintStart_toStartOf="@id/fuggoleges11"
            app:layout_constraintTop_toTopOf="@id/vizszintes7"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/vizszintes3"
            app:layout_constraintEnd_toStartOf="@id/fuggoleges6"
            app:layout_constraintStart_toStartOf="@id/fuggoleges5"
            app:layout_constraintTop_toTopOf="@id/vizszintes7"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/vizszintes2"
            app:layout_constraintEnd_toStartOf="@id/fuggoleges12"
            app:layout_constraintStart_toStartOf="@id/fuggoleges11"
            app:layout_constraintTop_toTopOf="@id/vizszintes1"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/vizszintes4"
            app:layout_constraintEnd_toStartOf="@id/fuggoleges7"
            app:layout_constraintStart_toStartOf="@id/fuggoleges6"
            app:layout_constraintTop_toTopOf="@id/vizszintes8"
            tools:src="@drawable/ember" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/vizszintes4"
            app:layout_constraintEnd_toStartOf="@id/fuggoleges11"
            app:layout_constraintStart_toStartOf="@id/fuggoleges10"
            app:layout_constraintTop_toTopOf="@id/vizszintes8"
            tools:src="@tools:sample/avatars" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vizszintes1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vizszintes2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vizszintes3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vizszintes7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vizszintes8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.80" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vizszintes4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fuggoleges5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fuggoleges6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fuggoleges7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.23" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fuggoleges8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fuggoleges9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fuggoleges10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.77" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fuggoleges11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.86" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fuggoleges12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>